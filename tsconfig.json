{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "sourceMap": true,

    "target": "ESNext",
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": false,
    "alwaysStrict": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "lib": [
      "dom",
      "es2015",
      "ES2016",
      "es2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022"
    ],
    "paths": {
      "~controllers/*": ["./controllers/*"],
      "~models/*": ["./models/*"],
      "~middlewares/*": ["./middlewares/*"],
      "~utils/*": ["./utils/*"],
      "~routes/*": ["./routes/*"],
      "~helpers/*": ["./helpers/*"],
      "~contracts/*": ["./contracts/*"],
      "~configs/*": ["./configs/*"],
      "~graphql/*": ["./graphql/*"],
      "~typechain/*": ["./typechain/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./global.d.ts",
    "./declarations.d.ts",
    "environment.d.ts",
    "./src/**/*.ts"
  ]
}
